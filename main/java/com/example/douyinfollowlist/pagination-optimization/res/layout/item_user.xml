<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- 头像 -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatarImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/default_avatar"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImageStyle"
        android:contentDescription="用户头像"/>

    <!-- 中间区域：用户名 + VIP + 特别关注 -->
    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 用户名 -->
        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="16sp"
            android:textColor="#333333"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- VIP图标 -->
        <ImageView
            android:id="@+id/vipIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_vip"
            android:visibility="gone"
            android:contentDescription="VIP"/>

        <!-- 特别关注标签 -->
        <TextView
            android:id="@+id/specialFollowTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="特别关注"
            android:textSize="10sp"
            android:textColor="#999999"
            android:background="@drawable/tag_special_follow_gray"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- 已关注按钮 -->
    <TextView
        android:id="@+id/followButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"
        android:text="已关注"
        android:textSize="13sp"
        android:textColor="#999999"
        android:background="@drawable/button_followed"/>

    <!-- 更多按钮 -->
    <ImageView
        android:id="@+id/moreButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:src="@drawable/ic_more"
        android:contentDescription="更多选项"/>

</LinearLayout>